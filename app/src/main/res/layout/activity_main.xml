<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tannerowens.a407_roommate_app.MainActivity">

    <Button
        android:id="@+id/bulletinBoardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bulletin Board"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="70dp" />

    <Button
        android:id="@+id/calendarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="70dp" />

    <Button
        android:id="@+id/scheduleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="198dp" />

    <Button
        android:id="@+id/whiteBoardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WhiteBoard"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="198dp" />

    <Button
        android:id="@+id/choresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chores"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/billsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bills"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="5dp"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
