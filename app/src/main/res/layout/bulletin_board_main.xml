<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- @TODO dynamically generate with real data -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <Button
                android:layout_height="100dp"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="SAMPLE POST 1"
                android:textSize="30dp"/>

            <Button
                android:layout_height="100dp"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="SAMPLE POST 2"
                android:textSize="30dp"/>

            <Button
                android:layout_height="100dp"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="SAMPLE POST 3"
                android:textSize="30dp"/>

            <Button
                android:layout_height="100dp"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="SAMPLE POST 4"
                android:textSize="30dp"/>

            <Button
                android:layout_height="100dp"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="SAMPLE POST 5"
                android:textSize="30dp"/>

            <Button
                android:layout_height="100dp"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="SAMPLE POST 6"
                android:textSize="30dp"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/NewPostButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_light"
            android:textSize="40sp"
            android:text="New Post" />
    </LinearLayout>

</RelativeLayout>